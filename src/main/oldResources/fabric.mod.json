{
  "schemaVersion": 1,
  "id": "balleritemod",
  "version": "${version}",

  "name": "Ballerite Mod",
  "description": "This mod adds a lot of miscellaneous and quality of life changes.",
  "authors": [
    "locipro"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "Attribution-NonCommercial-NoDerivatives 4.0 International",
  "icon": "assets/balleritemod/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.locipro.balleritemod.BalleriteMod"
    ],
    "client" : [
      "net.locipro.balleritemod.BalleriteModClient"
    ],
    "fabric-datagen" : [
      "net.locipro.balleritemod.BalleriteModDataGenerator"
    ]
  },
  "mixins": [
    "balleritemod.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.17",
    "fabric-api": "*",
    "minecraft": ">=1.20.4",
